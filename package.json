{
    "name": "lustre",
    "displayName": "Lustre",
    "description": "Lustre syntax highlighting and snippets",
    "publisher" : "MercierCorentin",
    "version": "0.1.1",
    "icon" : "images/logo.png",
    "readme": "README.md",
    "author": {
        "name": "Mercier Corentin"
    },
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/MercierCorentin/vscode-lustre.git"
    },
    "bugs": {
        "url": "https://github.com/MercierCorentin/vscode-lustre/issues",
        "email": "corentin.mercier@irsn.fr"
    },
    "contributes": {
        "languages": [{
            "id": "lustre",
            "aliases": ["lustre", "lustre"],
            "extensions": [".lus"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "lustre",
            "scopeName": "source.lustre",
            "path": "./syntaxes/lustre.tmLanguage.json"
        }],
        "snippets": [{
            "language": "lustre",
            "path": "./snippets/lustre.json"
        }]
    }
}